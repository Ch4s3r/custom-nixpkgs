{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "lockFileMaintenance": {
        "enabled": true
    }
    "extends": ["config:base"],
    "packageRules": [
        {
            "matchPackageNames": ["nixos/nixpkgs"],
            "matchPaths": ["flake.nix"],
            "automerge": true,
            "packagePatterns": [
                {
                    "matchUpdateTypes": ["minor", "patch"],
                    "updateTypes": ["minor", "patch"],
                    "groupName": "Nixpkgs Updates"
                }
            ]
        }
    ]
}
